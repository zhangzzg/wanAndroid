.list-item {
  display: flex;
  margin-top: 15rpx;
  flex-direction: column;
}
.list-item .list-title {
  display: flex;
  align-items: center;
}
.list-item .list-title .label {
  margin-right: 15rpx;
  margin-left: 15rpx;
  font-size: 25rpx;
  color: #dd524d;
  border: 1px solid;
  border-radius: 2px;
  padding-left: 8rpx;
  padding-right: 8rpx;
}
.list-item .list-title .author {
  margin-right: 15rpx;
  margin-left: 15rpx;
  color: #999999;
  font-size: 25rpx;
}
.list-item .list-title .time {
  display: flex;
  justify-content: flex-end;
  margin-right: 15rpx;
  color: #999999;
  font-size: 25rpx;
  flex: 1;
}
.list-item .list-content {
  display: flex;
  margin: 15rpx;
}
.list-item .list-content .image {
  width: 200rpx;
  height: 140rpx;
  margin-right: 15rpx;
}
.list-item .list-content .info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.list-item .list-content .info .title {
  margin-right: 15rpx;
  font-size: 30rpx;
}
.list-item .list-content .info .bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.list-item .list-content .info .bottom .noted {
  font-size: 15rpx;
  margin-top: 15rpx;
  color: #999999;
}
