.content {
  width: 100vw;
  height: 100vh;
}
.drawer {
  display: flex;
}
.drawer .drawer_conten {
  height: 90%;
}
.drawer .button_class {
  margin: 20rpx;
}
.head {
  width: 100%;
  height: 110rpx;
  background-color: #007AFF;
  display: flex;
  align-items: center;
}
.head .input {
  width: 750rpx;
  background-color: #FFFFFF;
  margin-left: 20rpx;
  margin-right: 20rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 10rpx;
  border: #999999 1px solid;
  border-radius: 5px;
  color: #999999;
}
.item {
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
  padding-right: 20rpx;
  justify-content: space-between;
}
.item .city {
  color: #333;
  font-size: 36rpx;
  padding-top: 10rpx;
}
.item .city_info {
  color: #999999;
  font-size: 30rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

