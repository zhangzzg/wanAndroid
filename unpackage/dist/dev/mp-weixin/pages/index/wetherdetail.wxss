.content {
  height: 100%;
  background-color: #DCDFE6;
}
.uni-navbar .uni-navbar--border {
  border-bottom-width: 0.5px !important;
}
.weather {
  width: 750rpx;
  height: 1040rpx;
  background: #FFFFFF;
}
.weather .image {
  width: 750rpx;
  height: 1040rpx;
}
.weather .title_area {
  position: relative;
  bottom: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.weather .title_area .temp {
  font-size: 60rpx;
  color: #FFFFFF;
}
.detail {
  width: 670rpx;
  display: flex;
  flex-direction: column;
  margin: 20rpx;
  padding: 20rpx;
  background-color: #FFFFFF;
  border-radius: 2px;
  color: #333333;
}
.detail .detail_info {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}
.detail .detail_info .wether_info {
  display: flex;
}
.detail .detail_info .wether_info .info {
  margin-bottom: 10rpx;
  font-size: 14px;
  margin-right: 20rpx;
}
.detail .detail_info .wether_info .icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.life {
  width: 670rpx;
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 2px;
  background-color: #ffffff;
}
.life .lift_content {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.life .lift_content .item {
  width: 325rpx;
  display: flex;
  margin-top: 20rpx;
  align-items: center;
}
.life .lift_content .image {
  width: 106rpx;
  height: 106rpx;
}
.life .lift_content .text {
  margin-left: 20rpx;
}

